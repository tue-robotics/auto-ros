{
  "name": "auto-ros",
  "version": "1.0.0",
  "description": "Wrapper of ROSLIB.Ros which automatically reconnects",
  "repository": {
    "type": "git",
    "url": "https://github.com/tue-robotics/auto-ros.git"
  },
  "author": {
    "name": "Matthijs van der Burgh",
    "email": "MatthijsBurgh@outlook.com"
  },
  "files": [
    "dist",
    "src"
  ],
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "browser": "dist/index.umd.js",
  "source": "src/index.js",
  "scripts": {
    "clean": "rimraf dist/",
    "prebuild": "npm run lint && npm run clean",
    "build": "npm run build:cjs && npm run build:umd && npm run build:umd:min && npm run build:esm",
    "build:cjs": "cross-env BABEL_ENV=cjs babel src --out-dir dist --out-file-extension .cjs --source-maps",
    "build:umd": "cross-env BABEL_ENV=umd babel src --out-dir dist --out-file-extension .umd.js --source-maps",
    "build:umd:min": "cross-env BABEL_ENV=umd babel src --out-dir dist --out-file-extension .umd.min.js --minified --source-maps",
    "build:esm": "cross-env BABEL_ENV=esm babel src --out-dir dist --out-file-extension .mjs --source-maps",
    "postbuild": "npm run deps",
    "deps": "npm run deps:missing && npm run deps:extra",
    "deps:missing": "dependency-check . --missing",
    "deps:extra": "dependency-check . --extra --no-dev",
    "predoc": "rimraf doc",
    "doc": "jsdoc -c jsdoc_conf.json",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "test": "cross-env BABEL_ENV=cjs mocha --require @babel/register test/*.js",
    "version": "npm run build",
    "patch": "npm version patch",
    "minor": "npm version minor",
    "major": "npm version major",
    "postversion": "git push && git push --tags"
  },
  "dependencies": {
    "cross-env": "^7.0.3",
    "eventemitter2": "^6.4.0",
    "roslib": "^1.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.0",
    "@babel/core": "^7.12.0",
    "@babel/eslint-parser": "^7.12.0",
    "@babel/preset-env": "^7.12.0",
    "@babel/register": "^7.12.0",
    "chai": "^4.2.0",
    "dependency-check": "^4.1.0",
    "eslint": "^8.0.0",
    "jsdoc": "^3.6.11",
    "mocha": "^10.0.0",
    "rimraf": "^3.0.2",
    "sinon": "^14.0.0",
    "sinon-chai": "^3.5.0"
  }
}
