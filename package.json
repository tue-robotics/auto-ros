{
  "name": "auto-ros",
  "version": "1.1.0",
  "description": "Wrapper of ROSLIB.Ros which automatically reconnects",
  "repository": {
    "type": "git",
    "url": "https://github.com/tue-robotics/auto-ros.git"
  },
  "author": {
    "name": "Matthijs van der Burgh",
    "email": "MatthijsBurgh@outlook.com"
  },
  "type": "module",
  "files": [
    "dist",
    "src"
  ],
  "main": "dist/index.js",
  "module": "dist/index.js",
  "source": "src/index.ts",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "prebuild": "npm run lint && rimraf dist",
    "build": "tsc",
    "postbuild": "npm run knip",
    "predoc": "rimraf doc",
    "doc": "typedoc src/index.ts",
    "knip": "knip",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "test": "tsx --test-reporter spec node_modules/mocha/bin/mocha test/*.ts",
    "version": "npm run build",
    "postversion": "git push && git push --tags",
    "patch": "npm version patch",
    "minor": "npm version minor",
    "major": "npm version major"
  },
  "dependencies": {
    "eventemitter2": "^6.4.0",
    "roslib": "^1.2.0"
  },
  "devDependencies": {
    "@types/chai": "^5.2.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "^25.0.3",
    "@types/sinon": "^21.0.0",
    "@types/sinon-chai": "^4.0.0",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "chai": "^5.2.0",
    "eslint": "^9.2.0",
    "globals": "^17.0.0",
    "knip": "^5.79.0",
    "mocha": "^11.0.0",
    "rimraf": "^6.0.0",
    "sinon": "^21.0.0",
    "sinon-chai": "^4.0.0",
    "tsx": "^4.21.0",
    "typedoc": "^0.28.15",
    "typescript": "^5.9.3"
  }
}
