{
  "plugins": ["plugins/markdown"],
  "markdown": {
    "parser": "gfm"
  },
  "source": {
    "include": ["src"],
    "includePattern": ".+\\.js(doc|x)?$",
    "excludePattern": "(^|\\/|\\\\)_"
  },
  "opts": {
    "template": "templates/default",  // same as -t templates/default
    "encoding": "utf8",               // same as -e utf8
    "destination": "doc",
    "recurse": true
  }
}
